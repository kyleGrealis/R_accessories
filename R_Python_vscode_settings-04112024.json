    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                ],
                "settings": {
                    "foreground": "#E06C75"
                }
            },
            {
                "scope": [
                    "punctuation.separator.parameters.r",
                    "constant.numeric"
                    
                ],
                "settings": {
                    "foreground": "#E5C07B"
                }
            },
            {
                "scope": [
                    "punctuation.section.brackets.single.begin.r"
                ],
                "settings": {
                    "foreground": "#98C379"
                }
            },
            {
                "scope": [
                    "variable",
                    "entity.name.tag.html",
                    "entity.name.tag.yaml" // key in yaml
                ],
                "settings": {
                    "foreground": "#61AFEF"
                }
            },
            {
                "scope": [
                    "entity.namespace.r",
                    "meta.function-call.arguments.r",
                    "keyword.other",
                    "support.function"
                ],
                "settings": {
                    "foreground": "#C678DD"
                }
            },
            {
                "scope": [
                    "keyword.operator.arithmetic",
                    "punctuation.separator",
                    "keyword.operator.assignment",
                    "support.type.property-name.css"
                ],
                "settings": {
                    "foreground": "#56B6C2"
                }
            },
            {
                "scope": [
                    "variable.other",
                    "punctuation.section.braces.begin.r"
                ],
                "settings": {
                    "foreground": "#ABB2BF"
                }
            }
        ]
    },
